<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="118.48dp"
        android:text="Добро пожаловать!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:layout_marginRight="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"


        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="112.36dp"
        android:layout_height="138.7dp"
        android:layout_marginStart="150.64dp"
        android:layout_marginTop="76.9dp"
        android:layout_marginEnd="148dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:srcCompat="@drawable/lion"

        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="91dp"
        android:layout_marginEnd="79dp"

        tools:text="Магазин видеоигр" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="329dp"
        android:layout_height="76.09dp"
        android:text="Войдите в аккаунт"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="47dp"
        android:layout_marginTop="102dp"
        android:drawableStart="@drawable/ic_person_24px_1"
        android:textAllCaps="false"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnReg"
        android:text="Зарегистрироваться"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="47dp"
        android:layout_marginTop="20.65dp"
        android:layout_width="329dp"
        android:textAllCaps="false"
        android:layout_height="76.09dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>